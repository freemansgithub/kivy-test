<LoginPopup>:
    name: 'login_popup'
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    Label:
        id: _server_url_setter
        size_hint_y: None
        height: dp(48)
        pos_hint: {'top': 1}

    BoxLayout:
        orientation: 'vertical'
        size_hint_y: None
        height: dp(144)
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        padding: dp(20), 0

        TextInput:
            id: username
            hint_text: 'Username'
        TextInput:
            id: password
            password: True
            hint_text: 'Password'
        Button:
            id: login_btn
            size_hint_y: None
            height: dp(48)
            text: 'Login'
            on_press: root.login(root.ids._username.text, root.ids._password.text)