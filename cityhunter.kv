<CityHunterRoot>:

    Label:
        id: label_text
        text: "0"
        font_size: "30dp"

    BoxLayout:
        orientation: "horizontal"
        spacing: "30dp"

        Button:
            text: "Add"
            on_release: label_text.text = str(int(label_text.text) + 1)

        Button:
            text: "Subtract"
            on_release: label_text.text = str(int(label_text.text) - 1)

    TextInput:
        id: text_input
        hint_text: "Enter Name"
        font_size: "30dp"

    Button:
        text: "Login"
        on_press: root.login(text_input.text)

    Button:
        text: 'Menu'
        on_press: root.menu(text_input.text)
